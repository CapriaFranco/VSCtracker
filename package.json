{
  "name": "vsctracker",
  "displayName": "vsctracker",
  "icon": "img/VSCtracker.png",
  "description": "Extensión para contar el tiempo de programación en VSC.",
  "version": "1.2.1",
  "publisher": "capriafranco",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": ["Other"],
  
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:VSCtracker.vt",
    "onCommand:VSCtracker.vt.help",
    "onCommand:VSCtracker.vt.save",
    "onCommand:VSCtracker.vt.status",
    "onCommand:VSCtracker.vt.showLocal",
    "onCommand:VSCtracker.vt.showRemote",
    "onCommand:VSCtracker.vt.pull",
    "onCommand:VSCtracker.vt.list",
    "onCommand:VSCtracker.vt.backup",
    "onCommand:VSCtracker.vt.backupDir",
    "onCommand:VSCtracker.vt.setBackupDir",
    "onCommand:VSCtracker.vt.clearBackupDir",
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "VSCtracker.vt",
        "title": "vt"
      },
      {
        "command": "VSCtracker.vt.help",
        "title": "vt help"
      },
      {
        "command": "VSCtracker.vt.save",
        "title": "vt save (sync local -> db)"
      },
      {
        "command": "VSCtracker.vt.status",
        "title": "vt status (db connection)"
      },
      {
        "command": "VSCtracker.vt.showLocal",
        "title": "vt show-local (ver datos locales)"
      },
      {
        "command": "VSCtracker.vt.showRemote",
        "title": "vt show-remote (ver datos en DB)"
      },
      {
        "command": "VSCtracker.vt.pull",
        "title": "vt pull (cargar DB -> local, sumar)"
      }
      ,
      {
        "command": "VSCtracker.vt.list",
        "title": "vt list (mostrar lenguajes y frameworks detectados)"
      },
      {
        "command": "VSCtracker.vt.backup",
        "title": "vt backup (generar backup JSON local)"
      }
      ,
      {
        "command": "VSCtracker.vt.backupDir",
        "title": "vt backup-dir (mostrar carpeta de backups)"
      }
      ,
      {
        "command": "VSCtracker.vt.setBackupDir",
        "title": "vt set-backup-dir (configurar ruta de backups)"
      },
      {
        "command": "VSCtracker.vt.clearBackupDir",
        "title": "vt clear-backup-dir (eliminar ruta configurada)"
      }
      ,
      {
        "command": "VSCtracker.vt.setFirebaseConfig",
        "title": "vt set-firebase-config (configurar credenciales Firebase)"
      },
      {
        "command": "VSCtracker.vt.clearFirebaseConfig",
        "title": "vt clear-firebase-config (eliminar credenciales Firebase)"
      }
    ],
    "configuration": {
      "title": "VSCTracker",
      "properties": {
        "vscTracker.backupDir": {
          "type": "string",
          "default": "",
          "description": "Optional path for backups (absolute or relative to workspace)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "firebase": "^11.2.0"
  },
  "repository": {
  "type": "git",
  "url": "https://github.com/capriafranco/VSCTracker.git"
  }
}

